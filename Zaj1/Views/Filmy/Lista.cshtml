@model IEnumerable<Zaj1.Models.film>
@{
}

<div class="text-center">
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Plakat</th>
            <th>Tytul</th>
            <th>Rezyser</th>
            <th>Opis</th>
            <th>DataDodania</th>
        </tr>


        @foreach (var film in Model)
        {
            <tr>
                <td>@film.Id</td>
                        <td><a href="@Url.Action("Szczegoly","Filmy",new{idFilmu=film.Id})"><img src="@Url.Content("~/Grafiki/" + @film.PlakatUrl)" alt="Opis obrazka" width=100  /></a></td>
                <td>@film.Tytul</td>
                <td>@film.Rezyser</td>
                <td>@film.Opis</td>
                <td>@film.DataDodania</td>
            </tr>

        }
    </table>
</div>
